{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false,
    "types": [
      "node",
      "@vuepress/client/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["docs/.vuepress/*"]
    }
  },
  "include": [
    "docs/.vuepress/**/*",
    "docs/**/*.md",
    "docs/**/*.vue",
    "docs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "docs/.vuepress/dist",
    "docs/.vuepress/.cache",
    "docs/.vuepress/.temp"
  ]
}